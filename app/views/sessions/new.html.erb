<%= provide(:title, 'Log in') %>
<section class="zero">
  <h1>Log in</h1>
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>

    <%= f.submit "Log in" %>
  <% end %>
</section>
